{% extends 'layouts/admin.html.twig'%}

{% block content %}
<div class="row">
    <div class="col-lg-12">
        <div class="card position-relative">
          <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Categories</h6>
          </div>
          <div class="card-body">
             {{ form_start(form) }}
             <div class="form-group row">
                <div class="col-sm-4">
                    {{ form_label(form.name , 'Nom' , {'label_attr': {'class': 'col-form-label'}} ) }}
                    {{ form_widget(form.name) }}
                </div>
                <div class="col-sm-4">
                  
                    {{ form_label(form.slug , 'Slug' , {'label_attr': {'class': 'col-form-label'}} ) }}
                    {{ form_widget(form.slug) }}
                </div>
                <div class="col-sm-4">
                 
                  {{ form_label(form.image_file , 'Image' , {'label_attr': {'class': 'col-form-label'}} ) }}
                    {{ form_widget(form.image_file) }}
                </div>
              </div>
    
    
              <div class="form-group row">
                <div class="col-sm-12">
                    {{ form_label(form.content , 'Contenu' , {'label_attr': {'class': 'col-form-label'}} ) }}
                    {{ form_widget(form.content) }}
                </div>
              </div>
    
              <hr>
              <div class="form-group row">
                <div class="col-md-6">
                  <button type="submit" class="btn btn-primary">Ajouter</button>
                </div>
              </div>
            {{ form_end(form) }}
          </div>
        </div>
    
      </div>
    
    </div>

{% endblock %}