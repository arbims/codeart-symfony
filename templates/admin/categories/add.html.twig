{% extends 'layouts/admin.html.twig'%}

{% block content %}
<div class="row">
    <div class="col-lg-12">
        <div class="card position-relative">
          <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Categories</h6>
          </div>
          <div class="card-body">
             {{ form_start(form) }}
              <div class="form-group row">
                {{ form_label(form.name , 'Nom' , {'label_attr': {'class': 'col-sm-2 col-form-label'}} ) }}
                <div class="col-sm-6">
                  {{ form_widget(form.name)}}
                </div>
              </div>
               <div class="form-group row">
                {{ form_label(form.slug , 'Slug' , {'label_attr': {'class': 'col-sm-2 col-form-label'}} ) }}
                <div class="col-sm-6">
                    {{ form_widget(form.slug)}}
                </div>
              </div>
              <hr>
              <div class="form-group row">
                <div class="col-md-12"><button type="submit" class="btn btn-primary">Ajouter</button></div>
              </div>
            {{ form_end(form) }}
          </div>
        </div>
    
      </div>
    
    </div>

    {% endblock %}